<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dlt.com.trivia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Game"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Globalization"
            android:screenOrientation="landscape"/>
        <activity android:name=".End"
            android:screenOrientation="landscape"/>
        <activity android:name=".Development"
            android:screenOrientation="landscape"/>
        <activity android:name=".Geography"
            android:screenOrientation="landscape"/>
        <activity android:name=".Leaders"
            android:screenOrientation="landscape"/>
        <activity android:name=".Conflict"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".Settings"
            android:screenOrientation="landscape" />
    </application>

</manifest>